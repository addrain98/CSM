{{#extends 'base'}}
{{#block 'content'}}
<h1>Shopping Cart</h1>
<ul class="list-group">
    {{#each cartItems}}
    <li class="list-group-item">
        <h4>{{this.product.name}}</h4>
        <h5>Category: {{this.product.category}}</h5>
        <h5>Cost: {{this.product.cost}}</h5>
        <h5>Quantity: {{this.quantity}}</h5>
    </li>
    {{/each}}
</ul>
{{/block}}
{{/extends}}